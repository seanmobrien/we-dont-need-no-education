{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve", // Ensure JSX is supported
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "esnext",
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "auto",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "ts-node",
      },
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // Explicit types prevent accidental inclusion of @types packages (for
    // example mocha) that collide with jest globals in the monorepo.
    // We include node + jest here so tests and runtime node types are
    // available while preventing other ambient test typings from leaking in.
    "types": [
      "node",
      "jest"
    ],
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
  },
  "include": [
    "./*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    ".upstream/**/*.*",
    "**/.upstream/**/*.*",
    "./(rsc)/**/*.*"
  ]
}