{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve", // Ensure JSX is supported
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "auto",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "ts-node",
      },
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
  },
  "include": [
    "./*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.mjs",
  ],
  "exclude": [
    "node_modules"
  ]
}