{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "removeComments": true,
    "jsx": "preserve", // Ensure JSX is supported
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "auto",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "ts-node"
      },
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      /*
      "/(rsc)/./*": [
        "./*"
      ],*/
      "@compliance-theater/logger": [
        "../lib-logger/dist"
      ],
      "@compliance-theater/logger/*": [
        "../lib-logger/dist/*"
      ],
      "@compliance-theater/typescript": [
        "../lib-typescript/dist"
      ],
      "@compliance-theater/typescript/*": [
        "../lib-typescript/dist/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // Explicit types prevent accidental inclusion of @types packages (for
    // example mocha) that collide with jest globals in the monorepo.
    // We include node + jest here so tests and runtime node types are
    // available while preventing other ambient test typings from leaking in.
    "types": [
      "node",
      "jest"
    ],
    // Look for ambient types in both local and repo-level node_modules.
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".upstream/**/*.*",
    "**/.upstream/**/*.*",
    "submodules/**/*.*",
    ".next"
  ]
}