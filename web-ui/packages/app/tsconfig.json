{
  "extends": "../../tsconfig.next.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "customConditions": [
      "workspace-source"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "next": [
        "../../node_modules/next"
      ],
      "next/*": [
        "../../node_modules/next/*"
      ]
    },
    // Explicit types prevent accidental inclusion of @types packages (for
    // example mocha) that collide with jest globals in the monorepo.
    // We include node + jest here so tests and runtime node types are
    // available while preventing other ambient test typings from leaking in.
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    ".upstream/**/*.*",
    "**/.upstream/**/*.*",
    "submodules/**/*.*",
    ".next"
  ],
  "references": [
    {
      "path": "../lib-logger"
    },
    {
      "path": "../lib-env"
    },
    {
      "path": "../lib-typescript"
    },
    {
      "path": "../lib-redis"
    },
    {
      "path": "../lib-after"
    },
    {
      "path": "../lib-database"
    },
    {
      "path": "../lib-nextjs"
    },
    {
      "path": "../lib-react"
    },
    {
      "path": "../lib-send-api-request"
    },
    {
      "path": "../lib-themes"
    }
  ]
}