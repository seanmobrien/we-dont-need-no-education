{
  "extends": "../app/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@compliance-theater/lib-logger": ["../lib-logger/dist"],
      "@compliance-theater/lib-logger/*": ["../lib-logger/dist/*"]
    },
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"],
  "references": [
    { "path": "../lib-logger" }
  ]
}
