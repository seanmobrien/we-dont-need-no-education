{
  "name": "@compliance-theater/typescript",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript utility types and helpers",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./singleton-provider": {
      "types": "./dist/singleton-provider/index.d.ts",
      "default": "./dist/singleton-provider/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "build:typescript": "echo 'Building lib/typescript typescript...' && tsc -b tsconfig.json && echo 'TypeScript build complete.' || (echo 'Typescript compile did not succeed' >&2; exit 1)",
    "test": "jest",
    "lint": "echo 'Linting lib-typescript...'",
    "clean:build": "rimraf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@compliance-theater/logger": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.3.4",
    "typescript": "^5"
  }
}
