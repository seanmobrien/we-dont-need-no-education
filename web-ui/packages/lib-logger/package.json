{
  "name": "@compliance-theater/logger",
  "version": "0.1.0",
  "private": true,
  "description": "Logging utilities for the Title IX Victim Advocacy Platform",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "workspace-source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "workspace-source": "./src/errors/index.ts",
      "default": "./dist/errors/index.js"
    },
    "./errors/logged-error": {
      "types": "./dist/errors/logged-error/index.d.ts",
      "workspace-source": "./src/errors/logged-error/index.ts",
      "default": "./dist/errors/logged-error/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "workspace-source": "./src/*.ts",
      "default": "./dist/*.js"
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=1.22.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn workspace @compliance-theater/logger run build:typescript",
    "build:typescript": "echo 'Building lib/logger typescript...' && tsc -b tsconfig.json && printf '\u001b[1;32mBuild complete: @compliance-theater/logger.\u001b[0m\n' || (printf '\u001b[31mBuild failed: @compliance-theater/logger.\u001b[0m\n' >&2; exit 1)",
    "build:publish": "yarn workspace @compliance-theater/logger run build && yarn workspace @compliance-theater/logger pack --out ./dist/@compliance-theater-logger.tgz",
    "test": "jest",
    "lint": "echo 'Linting lib-logger...'",
    "build:clean": "rimraf .next dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.57.2",
    "mitt": "^3.0.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "jest": "^30.0.5",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.3.4",
    "typescript": "^5"
  }
}
