{
  "name": "@compliance-theater/feature-flags",
  "version": "0.1.0",
  "private": true,
  "description": "Feature flag management utilities for the Title IX Victim Advocacy Platform",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "workspace-source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "workspace-source": "./src/client.ts",
      "default": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "workspace-source": "./src/server.ts",
      "default": "./dist/server.js"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "workspace-source": "./src/context.ts",
      "default": "./dist/context.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "workspace-source": "./src/types.ts",
      "default": "./dist/types.js"
    },
    "./known-feature": {
      "types": "./dist/known-feature.d.ts",
      "workspace-source": "./src/known-feature.ts",
      "default": "./dist/known-feature.js"
    },
    "./known-feature-defaults": {
      "types": "./dist/known-feature-defaults.d.ts",
      "workspace-source": "./src/known-feature-defaults.ts",
      "default": "./dist/known-feature-defaults.js"
    },
    "./feature-flag-with-refresh": {
      "types": "./dist/feature-flag-with-refresh.d.ts",
      "workspace-source": "./src/feature-flag-with-refresh.ts",
      "default": "./dist/feature-flag-with-refresh.js"
    },
    "./components/flag-provider": {
      "types": "./dist/components/flag-provider.d.ts",
      "workspace-source": "./src/components/flag-provider.tsx",
      "default": "./dist/components/flag-provider.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "workspace-source": "./src/*.ts",
      "default": "./dist/*.js"
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=1.22.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn workspace @compliance-theater/feature-flags run build:typescript",
    "build:typescript": "echo 'Building lib/feature-flags typescript...' && tsc -b tsconfig.json && printf '\u001b[1;32mBuild complete: @compliance-theater/feature-flags.\u001b[0m\n' || (printf '\u001b[31mBuild failed: @compliance-theater/feature-flags.\u001b[0m\n' >&2; exit 1)",
    "build:publish": "yarn workspace @compliance-theater/feature-flags run build && yarn workspace @compliance-theater/feature-flags pack --out ./dist/@compliance-theater-feature-flags.tgz",
    "test": "jest",
    "lint": "echo 'Linting lib-feature-flags...'",
    "build:clean": "rimraf .next dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@auth/core": "0.41.1",
    "@compliance-theater/env": "workspace:*",
    "@compliance-theater/logger": "workspace:*",
    "@compliance-theater/react": "workspace:*",
    "@compliance-theater/redis": "workspace:*",
    "@compliance-theater/typescript": "workspace:*",
    "@protobufjs/eventemitter": "^1.1.0",
    "fast-deep-equal": "^3.1.3",
    "flagsmith": "^9.3.2",
    "flagsmith-nodejs": "^6.2.0",
    "lru-cache": "^11.0.2",
    "next": "15.5.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.0",
    "jest": "^30.0.5",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.3.4",
    "typescript": "^5"
  },
  "peerDependencies": {
    "next": "^15.5.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
