{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/*.local",
    "**/.env",
    "**/tsconfig.*",
    "tsconfig.*",
    "**/*.mjs",
    ".yarn/**",
    "patches/**",
    "packages/app/scripts/**",
    "packages/app/public/**",
    "packages/app/instrument/**"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "AUTH_*",
        "AZURE_*",
        "NEXT_*",
        "NODE_ENV",
        "CRYPTO_*",
        "GOOGLE_*",
        "LOG_LEVEL_SERVER",
        "MEM0_*",
        "OPENAI_*",
        "OTEL_*",
        "REDIS_*",        
        "DATABASE_URL",
        "WORKSPACE_SOURCE_IMPORTS"
      ]
    },
    "build:typescript": {
      "dependsOn": ["^build:typescript"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "AUTH_*",
        "AZURE_*",
        "NEXT_*",
        "NODE_ENV",
        "CRYPTO_*",
        "GOOGLE_*",
        "LOG_LEVEL_SERVER",
        "MEM0_*",
        "OPENAI_*",
        "OTEL_*",
        "REDIS_*",        
        "DATABASE_URL",
        "WORKSPACE_SOURCE_IMPORTS"
      ]
    },
    "build:publish": {
      "dependsOn": ["^build:publish", "build:clean"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "AUTH_*",
        "AZURE_*",
        "NEXT_*",
        "NODE_ENV",
        "CRYPTO_*",
        "GOOGLE_*",
        "LOG_LEVEL_SERVER",
        "MEM0_*",
        "OPENAI_*",
        "OTEL_*",
        "REDIS_*",        
        "DATABASE_URL",
        "WORKSPACE_SOURCE_IMPORTS"
      ]
    },
    "@compliance-theater/app#build": {
      "outputs": []
    },
    "@compliance-theater/app#build:typescript": {
      "outputs": []
    },
    "build:clean": {
      "dependsOn": ["^build:clean"],
      "cache": false,
      "persistent": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "debug": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["**/*.test.ts", "**/*.test.tsx", "__tests__/**/*"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["build:typescript"],
      "outputs": []
    }
  }
}
