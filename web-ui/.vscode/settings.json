{
  // "jest.monitorLongRun": "",
  // "jest.shell": "",
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "file": "web-ui/instructions/typescript-react.instructions.md",
      "name": "typescript-react",
      "description": "Use this instruction file for TypeScript React projects to get tailored code suggestions"
    }
  ],
  "editor.tabSize": 2,
  "typescript.preferences.autoImportSpecifierExcludeRegexes": [
    "^@mui/[^/]+$"
  ],
  "debug.hideLauncherWhileDebugging": true,
  "launch": {
    "configurations": [],
    "compounds": []
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  /*
  "jest.outputConfig": {
    "revealOn": "run",
    "revealWithFocus": "neverOpen",
    "clearOnRun": "none",
    "showConsole": true,
    "showStatus": true,
    "showOutput": true,
    "showNotification": false,
    "showCoverageOnPass": false,
    "showCodeLens": true
  },
  */
  "workbench.localHistory.exclude": {
    "(rsc)/**": true
  },
  "explorer.excludeGitIgnore": true,
  "jest.jestCommandLine": "yarn --cwd . workspaces run test",
  "jest.disabledWorkspaceFolders": [
    ".upsort"
  ],
  "jest": {
    "runAllTestsFirst": false,
    "enableInlineErrorMessages": true,
    "showCoverageOnLoad": false,
    "autoRun": "off",
    "codeLens": {
      "enable": true,
      "showRunAllInFile": true,
      "showCoverageInFile": false
    },
    "debugCodeLens": {
      "enable": true,
      "showDebugAllInFile": true
    },
    "coverageFormatter": "vscode",
    "testExplorer": {
      "enabled": true
    },
    "watchMode": "off",
    "runMode": "on-demand",
    "useJest30": true,
    "monitorLongRun": "",
    "shell": "",
    "outputConfig": {
      "revealOn": "run",
      "revealWithFocus": "neverOpen",
      "clearOnRun": "none",
      "showConsole": true,
      "showStatus": true,
      "showOutput": true,
      "showNotification": false,
      "showCoverageOnPass": false,
      "showCodeLens": true
    },
  },
  // "jest.runMode": "on-demand",
  // "jest.useJest30": true,
  "testing.automaticallyOpenTestResults": "neverOpen",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "debug.javascript.autoAttachFilter": "onlyWithFlag"
}